<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Channels ChatAPP</title>
    <link rel="stylesheet" href="../public/dist/css/style.min.css">
    <link rel="stylesheet" href="../public/dist/css/pages/channels.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Style+Script&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.4/axios.min.js"
    integrity="sha512-lTLt+W7MrmDfKam+r3D2LURu0F47a3QaW5nF0c6Hl0JDZ57ruei+ovbg7BrZ+0bjVJ5YgzsAWE+RreERbpPE1g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>

<body>
   
    <%- include('./layouts/loaders') %>    
    <!-- MAIN CONTENT -->
    <div class="container-fluid px-0 mx-0">
        
        <div class="row no-gutters d-flex justify-content-center">
            <h1 class="text-center text-white position-absolute mt-5" style="z-index: 1;" id="channelBaslik">CHOOSE YOUR CHANNEL</h1>    
            <div class="col-sm-12 col-md-4 anakart" style="background-image:url('../public/images/music.jpeg'); background-size: cover;">
                <div class="middle">
                    <a href="/music" class="btn btn-primary" id="musicBtn"><i class='fa fa-music' style="font-size: xx-large;"></i></a>
                </div>
            </div>
            <div class="col-sm-12 col-md-4 anakart" style="background-image:url('../public/images/gaming.jpeg'); background-repeat: no-repeat; background-size: cover;">
                <div class="middle">
                    <a href="/gaming" class="btn btn-primary" id="musicBtn"><i class='fa fa-gamepad' style="font-size: xx-large;"></i></a>
                </div>
            </div>
            <div class="col-sm-12 col-md-4 anakart" style="background-image:url('../public/images/movie2.jpeg'); background-size: cover;">
                <div class="middle">
                    <a href="/movie" class="btn btn-primary"><i class='fa fa-film' style="font-size: xx-large;"></i></a>
                </div>
                
            </div>
            <button onclick="logout()" class="btn btn-primary" id="logout-btn" >Log out</button>
        </div>
    </div>
    <!-- MAIN CONTENT -->
    <script src="../public/dist/channels.js"></script>
    <%- include('./layouts/loaderf') %>  
    <script>
        
        setTimeout(() => {
            $("#channelBaslik").fadeOut("slow");   
        }, 1000);
         
        
    </script>
</body>

</html>